// 登録成功した場合、本棚に遷移するか確認する
<%if flash[:success].present?%>
  if (confirm('本棚を表示しますか？')) {
    location.href = '/books';
  }
<%end%>
// flashメッセージを出力し、3秒で消す
<%flash.each do |message_type, message|%>
  $('#flash-message').html('<div class="alert alert-<%=message_type%>"><%=message.html_safe%></div>');
<%end%>
$('.alert').delay(2500).fadeOut(500);
